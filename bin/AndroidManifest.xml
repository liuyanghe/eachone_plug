   		<activity android:name="com.hfapp.activity.Setting" android:theme="@android:style/Theme.Black.NoTitleBar" android:launchMode="singleInstance"/>
   		
   		<activity android:name="com.hfapp.activity.UserModify" 
   		    android:windowSoftInputMode="adjustUnspecified|stateHidden"/>
   		
   		<activity android:name="com.hfapp.activity.UserGuide" />
   		
   		<activity android:name="com.hfapp.activity.LightModuleInfo"/>
   		
   		<activity android:name="com.hfapp.activity.ModuleModify"/>
   		
   		<activity android:name="com.hfapp.activity.ImageContentor"/>
   		
   		<activity android:name="com.hfapp.activity.TimerCenter"/>
   		
   		<activity android:name="com.hfapp.activity.TimerAdder"/>
   		
   		<activity android:name="com.hfapp.activity.SmartCtrler"/>
   		
   		<activity android:name="com.hfapp.activity.ModuleList" android:theme="@android:style/Theme.Holo.Light"/>
   		
   		<activity android:name="com.hfapp.activity.Smartlink"
   		    android:windowSoftInputMode="adjustUnspecified|stateHidden"
   		     android:launchMode="singleInstance"/>
    	
    	<activity android:name="com.hfapp.activity.ZigbeeModuleInfoActivity" />
    	
    	<activity android:name="com.hfapp.activity.LightCtrl"/>
    	
    	<activity android:name="com.hfapp.activity.SystemCtrl"/>
    	
    	<activity android:name="com.hfapp.activity.ConfigSetting"
    	    android:windowSoftInputMode="adjustUnspecified|stateHidden"/>
